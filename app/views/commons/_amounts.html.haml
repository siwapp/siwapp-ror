%table.table
  %tr
    %th{scope: "row"} #{t("subtotal")}:
    %td= display_money invoice.net_amount
  - invoice.taxes.each do |tax, value|
    %tr
      %th{scope: "row"}= tax.name
      %td= display_money value
  %tr.amounts-total
    %th{scope: "row"} #{t("total")}:
    %td= display_money invoice.gross_amount
