!!! 5
%html
  %head
    %meta{"charset" => "utf-8"}/
    %meta{"name" => "viewport", :content => "width=device-width, initial-scale=1, shrink-to-fit=no"}/
    %meta{"http-equiv" => "x-ua-compatible", :content => "ie=edge"}/

    %title= content_for?(:title) ? yield(:title) : "Siwapp"

    = stylesheet_link_tag    '//fonts.googleapis.com/icon?family=Material+Icons'
    = stylesheet_link_tag    '//fonts.googleapis.com/css?family=Roboto:400,400italic,700,700italic'
    = stylesheet_link_tag    '//cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css'
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js'

    = csrf_meta_tags

  %body
    = render partial: 'shared/navbar'

    .container-fluid{"role" => "main"}
      - flash.each do |message_type, message|
        %div{:class => "alert alert-#{message_type}"}= message

      = content_for?(:content) ? yield(:content) : yield
