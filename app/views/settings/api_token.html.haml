%h1=t("api token")

- if @api_token
  %p
    =t(".authenticate api token")
    %code.active= @api_token

  .action-buttons{"data-role": "action-buttons"}
    = link_to "#{t("generate")} #{t("token")}", settings_api_token_path, method: :post, "data-confirm": "Are you sure? This will invalidate any existing token!", class: "btn btn-success pull-xs-right no-margin"
- else
  %p=t(".press api token")
  .action-buttons{"data-role": "action-buttons"}
    = link_to "#{t("generate")} #{t("token")}", settings_api_token_path, method: :post, class: "btn btn-success pull-xs-right no-margin"
